<section class="store-container">
  <div class="store-header-container">
    <div class="store-description-container">
      <span class="main-section-text">Tienda.</span>
      <div class="section-tagline-text" style="color: white">
        Nuestra ética de trabajo asegura el éxito en tu jardín.
      </div>
      <div class="greenblock-horizontal"></div>
    </div>

    <a href="/collections/all" class="second-cta-btn second-cta-btn-colored"
      >Visita nuestra tienda</a
    >
  </div>

  <div class="store-carousel-container">
    {% assign coolors = "#E91E63, #673AB7, #2196F3, #009688, #FBC02D, #E64A19,
    #00B0FF" | split: ", " %} {% for product in collections["hombres"].products
    %} {% assign currentColorIndex = forloop.index | modulo: 7 %} {% assign
    currentBackgroundColor = coolors[currentColorIndex] %}
    <a href="{{ product.url }}">
      <div
        class="carousel-content"
        style="background-image: url('{{
          product.featured_image.src | img_url: 'large'
        }}');"
      >
        <div
          class="carousel-link-container"
          style="background-color: {{ currentBackgroundColor }};"
        >
          <span class="carousel-product-title">{{ product.title }}</span>
          <span class="carousel-product-price">{{
            product.price || money
          }}</span>
        </div>
      </div>
    </a>
    {% endfor %}
  </div>

  <div class="carousel-controls-container dots">
    <a href="#" class="carousel-control arrow-left"><</a>
    <a href="#" class="carousel-control arrow-right">></a>
  </div>
</section>

